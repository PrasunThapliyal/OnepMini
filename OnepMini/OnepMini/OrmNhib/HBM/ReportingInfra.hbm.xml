<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "OnepMini" namespace = "TopologyRestLibrary.V1.Etp.Reports">
  <class name="ReportingInfra" table="reporting_infra" lazy="true">
    <id name = "Id" column="oid">
      <generator class = "hilo"/>
    </id>

    <property name="ProjectId" type="StringClob">
      <column name="projectId" index="reporting_infra_projectId_idx"  sql-type="text"/>
    </property>
    
    <!-- This is actually a one-to-one unidirectional relatioship. See https://nhibernate.info/doc/nhibernate-reference/associations.html -->
    <many-to-one name="FibersReport" column="fibersReport" unique="true" cascade="all-delete-orphan"/>

  </class>
</hibernate-mapping>
