<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "OnepMini" namespace = "OnepMini.V1.Etp.Reports">

  <class name="EquipmentReportItem" table="equipment_report_item" lazy="true" >
    <id name = "OId" column="oid">
      <generator class = "hilo"/>
    </id>

    <property name="ChangeType" column="changeType"  not-null="true"  />
    <property name="Id" column="id"  />
    <property name="Width" column="width"  />
    <property name="CanReslot" column="canReslot"  />
    <property name="EquipmentGroupKey" column="equipmentGroupKey"  />


    <many-to-one name="Node" column="node" unique="true" cascade="all-delete-orphan" lazy="no-proxy" />
    <many-to-one name="EquipmentSpec" column="equipmentSpec" unique="true" cascade="all-delete-orphan" lazy="no-proxy" />
    <many-to-one name="Location" column="location" unique="true" cascade="all-delete-orphan" lazy="no-proxy" />
    <many-to-one name="PlanningState" column="planningState" unique="true" cascade="all-delete-orphan" lazy="no-proxy" />



    <bag name="EligibleNEs" lazy="true" cascade="all-delete-orphan" inverse="false" fetch="select">
        <key column="equipmentReportItem" update="true" foreign-key="eligible_ne_FK_equipmentReportItem" ></key>
        <one-to-many class="EligibleNE"></one-to-many>
    </bag>


    <bag name="EligibleShelves" table="equipment_report_item_eligible_shelves" >
        <key column="equipmentReportItem" foreign-key="equipment_report_item_eligible_shelves_FK_equipmentReportItem" ></key>
        <element column="eligibleShelves" />
    </bag>


  </class>
</hibernate-mapping>
