<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "OnepMini" namespace = "OnepMini.V1.Etp.Reports">

  <class name="ReportingRoot" table="reporting_root" lazy="true" >
    <id name = "OId" column="oid">
      <generator class = "hilo"/>
    </id>

    <property name="ProjectId" column="projectId"  />
    <property name="CreationDate" column="creationDate"  />
    <property name="LastAccessedDate" column="lastAccessedDate"  />




    <set name="EquipmentReports" lazy="true" cascade="all-delete-orphan" inverse="false" fetch="select">
        <key column="reportingRoot" update="true" foreign-key="equipment_report_FK_reportingRoot" ></key>
        <one-to-many class="EquipmentReport"></one-to-many>
    </set>



  </class>
</hibernate-mapping>
