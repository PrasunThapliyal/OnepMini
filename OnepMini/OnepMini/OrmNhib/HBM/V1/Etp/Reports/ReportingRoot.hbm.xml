<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "OnepMini" namespace = "TopologyRestLibrary.V1.Etp.Reports">

  <class name="ReportingRoot" table="reporting_root" lazy="true" >
    <id name = "OId" column="oid">
      <generator class = "hilo"/>
    </id>

    <property name="ProjectId" column="projectId"  />
    <property name="CreationDate" column="creationDate"  />
    <property name="LastAccessedDate" column="lastAccessedDate"  />




    <bag name="FibersReport" lazy="true" cascade="all-delete-orphan" inverse="false" fetch="select">
        <key column="reportingRoot" update="true" foreign-key="fibers_report_FK_reportingRoot" ></key>
        <one-to-many class="FibersReport"></one-to-many>
    </bag>
    <bag name="OchReport" lazy="true" cascade="all-delete-orphan" inverse="false" fetch="select">
        <key column="reportingRoot" update="true" foreign-key="och_report_FK_reportingRoot" ></key>
        <one-to-many class="OchReport"></one-to-many>
    </bag>
    <bag name="CsAmpProvisioningReport" lazy="true" cascade="all-delete-orphan" inverse="false" fetch="select">
        <key column="reportingRoot" update="true" foreign-key="csamp_provisioning_report_FK_reportingRoot" ></key>
        <one-to-many class="CSAmpProvisioningReport"></one-to-many>
    </bag>



  </class>
</hibernate-mapping>
